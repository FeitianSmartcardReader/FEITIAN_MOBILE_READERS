<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1.5"
    android:gravity="center"
    android:orientation="horizontal"  >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/btn_readflash"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/readflash"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reader Flash"
            android:textColor="#B6B5B6"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/btn_writeflash"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:src="@drawable/writeflash"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Write Flash"
            android:textColor="#B6B5B6"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/btn_uid"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:src="@drawable/uid"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get UID"
            android:textColor="#B6B5B6"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="70dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/btn_escapecmd"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:src="@drawable/escapecmd"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escape Cmd"
            android:textColor="#B6B5B6"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>