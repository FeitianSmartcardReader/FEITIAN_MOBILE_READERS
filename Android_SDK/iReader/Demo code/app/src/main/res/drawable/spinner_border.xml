<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Group1 item：margin settings -->
    <item>
        <shape>
            <!-- margin width, color -->
            <stroke
                android:width="0.5dp"
                android:color="#000000" >
            </stroke>
            <!-- radius value -->
            <corners android:radius="0dp" />
            <!-- background color -->
            <solid android:color="#ffffff" />
            <!-- padding：margins -->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" >
            </padding>
        </shape>
    </item>

    <!-- Group2 item：spinner arrow (replacement of default one) -->
    <item>
        <!-- bitmap.gravity：set spinner arrow position -->
        <!-- bitmap.src：set image resource for spinner arrow -->
        <bitmap
            android:gravity="end"
            android:src="@mipmap/arrow_down">
        </bitmap>
    </item>
</layer-list>