<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <dist:module dist:instant="true" />
    <uses-feature android:name="android.hardware.usb.host"/>
    <uses-feature android:name="android.hardware.usb.accessory"/>
    <uses-feature android:name="android.hardware.bluetooth" android:required="false"/>
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="false"/>

    <!-- USB PERMISSION -->
    <uses-permission android:name="android.permission.USB_PERMISSION" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="29" /><!-- Only for old devices for compatibility -->


    <!-- Declare sub-permissions if specified media type files access needed -->
    <!-- Android 13（API 33）and above：use READ_MEDIA_* instead of READ_EXTERNAL_STORAGE -->

    <uses-permission android:name="android.permission.WRITE_USER_DICTIONARY" />

    <!-- Basic Bluetooth permission -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <!-- Android 12+ added permissions -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="31" /> <!-- Location is not needed -->

    <!-- In Android 6-11, location permission is needed -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Android 9+ foreground service permission is needed -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Storage Permission（Only when API ≤ 28） -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" /> <!-- Only needed when API ≤ 28 -->

    <application
        android:name=".ui.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:preserveLegacyExternalStorage="true"
        android:roundIcon="@mipmap/icon"
        android:supportsRtl="true"
        android:debuggable="false"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedDebugMode"
        android:requestLegacyExternalStorage="true">
        <activity
            android:name=".ui.LauncherActivity"
            android:screenOrientation="unspecified"
            android:theme="@style/NoTitleTheme"
            android:exported="true"
            tools:targetApi="31">
            <intent-filter>
                <action android:name ="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.ftsafe.cardreader.ui.ConnectActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            android:exported="true">
        </activity>
        <activity android:name=".ui.CardReaderManagertActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            android:exported="true">
        </activity>
        <activity android:name=".ui.InformationActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="stateHidden|stateUnchanged"
            android:exported="true">
        </activity>
    </application>
</manifest>